<button
  type="button"
  class="cool-button"
  {{on "click" this.toggleDialog}}
  title="Show the chat settings"
>
  {{this.gearIcon}}
</button>
{{#if this.showingDialog}}
  <Ui::Modal @toggleModal={{this.closeDialog}}>
    <div class="modal-body m-1">
      <Chat::EnableGifsButton
        @toggleGifs={{this.toggleGifsEnabled}}
        @enabled={{this.chat.gifsEnabled}}
      />
      {{#if this.videoStream.active}}
        <Chat::TvModeButton
          @toggleVideo={{this.toggleVideo}}
          @enabled={{this.videoStream.displaying}}
        />
      {{/if}}
      <Chat::ColorPicker />
    </div>
  </Ui::Modal>
{{/if}}