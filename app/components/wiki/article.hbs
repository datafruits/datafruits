<h1 class="text-3xl font-cursive text-center pb-2">{{@page.title}}</h1>
<article class="bg-df-blue-dark wiki-article p-1">
  <div class="flex pb-2">
    <div class="m-2">
      <LinkTo @route="home.wiki" class="cool-button">
        BACK
      </LinkTo>
    </div>
    {{#if this.session.isAuthenticated}}
      <div class="m-2">
        <LinkTo @route="home.wiki.edit" class="cool-button" @model={{@page}}>
          EDIT
        </LinkTo>
      </div>
    {{/if}}
    <div class="m-2">
      <LinkTo @route="home.wiki.history" class="cool-button" @model={{@page}}>
        HISTORY
      </LinkTo>
    </div>
  </div>
  {{marked-down this.body}}
</article>