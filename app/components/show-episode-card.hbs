{{!--

SHOW EPISODE CARD

A card for a specific episode of a show.

--}}


<div class="m-3 bg-df-blue-dark rounded-lg border-4 border-white w-full md:w-3/4 p-2 flex flex-col justify-between shadow-md">
  {{! Episode art }}
  <div class="self-center w-full h-full">
    <LinkTo
      @route="home.shows.episode"
      @models={{array @episode.showSeriesSlug @episode.slug}}
      class="h-80 bg-center bg-cover block overflow-hidden rounded-xl"
      style="{{this.backgroundStyle}}">
    </LinkTo>
  </div>

  {{! Episode name/link }}
  <LinkTo
    @route="home.shows.episode"
    @models={{array @episode.showSeriesSlug @episode.slug}}
    class="text-2xl">
    {{@episode.formattedEpisodeTitle}}
  </LinkTo>

  {{! Genres/tags/labels }}
  <TrackLabelList @labels={{@episode.labels}} />

</div>
