<form {{on "submit" this.savePost}} {{did-insert this.didInsertForm}}>
  <div>
    <label class="block text-sm font-bold mb-2" for="body">{{t "forum.form.body"}}</label>
    <Textarea
      @value={{this.body}}
      id="post-form-body"
      rows='5'
      cols='100'
      />
  </div>
  <div>
    <Input
      class="cool-button"
      @type="submit"
      @value={{t "forum.form.save"}}
      disabled={{this.cantSave}}
      />
  </div>
</form>