<div class="bg-df-pink text-2xl rounded-lg sm:py-1 flex space-x-1 text-xs sm:text-xl">
  <div class="mt-1 flex space-x-1">
    {{#if this.playing}}
      <a
        class="text-df-green hover:text-df-yellow text-xl"
        {{action "pause"}}
        href="#"
      >
        {{t "player.pause"}}
      </a>
    {{else}}
      <a
        class="text-df-green hover:text-df-yellow text-xl"
        {{action "play"}}
        href="#"
      >
        {{t "player.play"}}
      </a>
    {{/if}}
    <a href={{@track.cdnUrl}} download="">
      <FaIcon
        @icon="download"
        class="fa fa-download text-df-green hover:text-df-yellow text-xl"
      />
    </a>
    {{#if @track.youtubeLink}}
      <a href={{@track.youtubeLink}} target="_blank" rel="noreferrer noopener">
        <FaIcon
          @icon="youtube"
          @prefix="fab"
          class="text-df-green hover:text-df-yellow text-xl"
        />
      </a>
    {{/if}}
  </div>
  {{#if this.session.isAuthenticated}}
    {{#if this.isFavorited}}
      <button
        class="cool-button favorited max-h-8"
        type="button"
        aria-label="Remove From Favorites"
        title="Remove From Favorites"
        {{on "click" this.unfavoriteTrack}}
      >
        <FaIcon @icon="heart" />
      </button>
    {{else}}
      <button
        class="cool-button not-favorited max-h-8"
        type="button"
        aria-label="Add To Favorites"
        title="Add To Favorites"
        {{on "click" this.favoriteTrack}}
      >
        <FaIcon @icon="heart" />
      </button>
    {{/if}}
  {{/if}}
  <div class="mt-1 flex flex-wrap items-center gap-0.5 sm:gap-1.5">
    {{#if @track.scheduledShow}}
      <LinkTo @route="home.show" @model={{@track.scheduledShow}}>
        {{@track.title}}
      </LinkTo>
    {{else}}
      <span >
        {{@track.title}}
      </span>
    {{/if}}
    {{#each @track.labels as |label|}}
    <a
      {{on "click" (fn this.selectLabel label.name)}}
      href="#"
      class="track-label
            text-df-yellow
            classic:bg-df-pink
            blm:bg-black
            hover:text-white
            p-0.5
            p-x-1
            sm:p-1
            sm:p-x-2
            sm:text-base
            uppercase
            border-solid
            border-white
            border
            sm:border-2
            font-extrabold" >
        {{label.name}}
      </a>
    {{/each}}
  </div>
</div>