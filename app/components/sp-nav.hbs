      <span class="sr-only">
        {{t "nav_toggle"}}
      </span>
      <FaIcon @icon="bars" aria-hidden="true" />
    </button>
    {{#if @menuOpen}}
      <ul class="flex flex-wrap overflow-y-scroll">
        <li
          class="py-2 pr-3 text-white text-shadow-light w-full border-dashed border-white border-t-4"
