          <span {{on "click" @toggleMenu}}>
            <LinkTo
              class="text-white text-shadow-light"
              aria-label={{t "settings.title"}}
              @route="home.site-settings"
            >
              {{t "settings.icon"}}
            </LinkTo>
          </span>
        </li>
        <li class="py-2 pr-3 w-full border-dashed border-white border-t-4">
          <a
            target="_blank"
            rel="noopener noreferrer"
            href="https://hubs.mozilla.com/MsvfAkH/terrific-satisfied-area"
            class="text-white text-shadow-light"
          >
            <img
              width="75"
              alt="{{t '3D.title'}}"
              src="/assets/images/3D.gif"
            />
          </a>
        </li>
      </ul>
    {{/if}}
  </div>
  {{#unless @menuOpen}}

    <DjDonateModal class="block md ml-5" />

    <div class="">
      {{#if this.session.isAuthenticated}}
        <a
          href="#"
          class=""
          role="button"
          aria-label="{{t 'usermenu.dropdown-aria'}}"
          {{on "click" this.args.toggleUserMenu}}
        >
          <img
            class="inline rounded-lg"
            style="height: 3rem;"
            src="{{this.currentUser.user.avatarUrl}}"
            align="center"
            alt={{this.currentUser.user.username}}
          />
        </a>
      {{else}}
        <LinkTo @route="home" aria-label={{t "blog"}}>
          <img
            class=""
            id="circle-logo"
            src="/assets/images/logo.png"
            alt={{t "site_title"}}
          />
        </LinkTo>
      {{/if}}
    </div>
