<div class="mt-2">
  {{#each this.badges as |badge|}}
    <button
      {{on "click" (fn this.showBadge badge)}}
      >
    <img
      class="inline rounded-lg"
      style="height: 2rem;"
      src="{{badge.url}}"
      align="center"
      alt={{badge.description}}
      title={{badge.description}} / >
    </button>
  {{/each}}
</div>
{{#if this.badgeViewerOpen}}
  <User::BadgeViewer @badge={{this.currentBadgeViewer}} @closeModal={{this.closeBadgeViewer}}/>
{{/if}}
