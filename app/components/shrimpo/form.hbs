<h1 class="text-2xl">
  <img class="inline" src="/assets/images/emojis/sshrimp.png" />
    {{t "shrimpo.form.beginning"}}
  <img class="inline" src="/assets/images/emojis/sshrimp_clear.png" />
  many fruits will shrimp...only one will win! will you challenge the fruit-iverse of shrimp?!
</h1>
{{#let (changeset @model this.ShrimpoValidations) as |changeset|}}
  <Ui::ChangesetForm
    @changeset={{changeset}}
    @onError={{this.onError}}
    @onSubmit={{this.onSubmit}} as |Form|>
    <Form.Input
      @label={{t "shrimpo.form.title"}}
      @fieldName="title"
      @containerClass='mb-2'
      />
    <Form.Textarea
      @label={{t "shrimpo.form.rulepack"}}
      @placeholder={{t "shrimpo.form.rulepack_placeholder"}}
      @fieldName="rulePack"
      @containerClass='mb-2'
      @size='lg'
      rows='10'
      cols='50'
      />
    <Form.Input
      @label={{t "shrimpo.form.voting_emoji"}}
      @fieldName="emoji"
      @containerClass='mb-2'
      />
    <div>
      <label class="block text-sm font-bold mb-2" for="body">{{t "profile.my-shows.form.start"}}</label>
      <input
        class="mr-2"
        type="date"
        id="start-date"
        min={{this.currentDate}}
        value={{format-day changeset.startAt}}
      />
      <TimePicker
        @property="startAt"
        @changeset={{changeset}}
        />
    </div>
    <div>
      <select
        id="length"
        {{on "change" (fn this.setLength changeset)}}
        >
        {{#each this.lengths as |length|}}
          <option value="{{length}}" selected={{(eq changeset.duration length)}}>{{length}}</option>
        {{/each}}
      </select>
    </div>

    <div>
      <label>
        {{t "shrimpo.form.zip_file"}}
        <input type="file" {{on "change" (fn this.uploadZip changeset)}}>
      </label>
      {{this.uploadProgress}}
    </div>

    <Button
      @type="submit"
      @intent="primary"
      class="cool-button"
      disabled={{or Form.state.hasSubmitted changeset.isInvalid}}
      >
      {{t "shrimpo.form.submit"}}
    </Button>
    {{#if Form.state.hasSubmitted}}
      <marquee>{{t "forms.saving"}}</marquee>
    {{/if}}
  </Ui::ChangesetForm>
{{/let}}