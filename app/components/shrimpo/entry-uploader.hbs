{{#let (changeset this.entry this.ShrimpoEntryValidations) as |changeset|}}
  <Ui::ChangesetForm
    @changeset={{changeset}}
    @onError={{this.onError}}
    @onSubmit={{this.onSubmit}} as |Form|>
    <Form.Input
      @label={{t "shrimpo.form.title"}}
      @fieldName="title"
      @containerClass='mb-2'
      />
    <div>
      <label>
        Upload file plz
        <input type="file" {{on "change" (fn this.uploadEntry changeset)}}>
      </label>
      {{this.uploadProgress}}
    </div>
    <Button
      @type="submit"
      @intent="primary"
      class="cool-button"
      disabled={{or Form.state.hasSubmitted changeset.isInvalid}}
      >
      {{t "shrimpo.form.submit"}}
    </Button>
    {{#if Form.state.hasSubmitted}}
      <marquee>SAVING....DON'T TURN OFF THE POWER.........</marquee>
    {{/if}}
  </Ui::ChangesetForm>
{{/let}}