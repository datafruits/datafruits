<div>
  <h3>Shrimps command voting happens now!</h3>

  <div class="shrimpo-score-picker">
    <input
      type="range"
      min=1
      max=6
      value={{this.score}}
      {{on "change" this.setScore}}
    >
    <div class="flex">
      <img
        width='48'
        src="/assets/images/emojis/acid.gif"
      >
      <img
        class={{if (gte this.score 2) "opacity-100" "opacity-50"}}
        width='48'
        src="/assets/images/emojis/acid.gif"
      >
      <img
        class={{if (gte this.score 3) "opacity-100" "opacity-50"}}
        width='48'
        src="/assets/images/emojis/acid.gif"
      >
      <img
        class={{if (gte this.score 4) "opacity-100" "opacity-50"}}
        width='48'
        src="/assets/images/emojis/acid.gif"
      >
      <img
        class={{if (gte this.score 5) "opacity-100" "opacity-50"}}
        width='48'
        src="/assets/images/emojis/acid.gif"
      >
      <img
        class={{if (gte this.score 6) "opacity-100" "opacity-50"}}
        width='48'
        src="/assets/images/emojis/acid.gif"
      >
    </div>
  </div>
</div>