{{#if this.session.isAuthenticated}}
  <div>
    <h3>{{t "shrimpo_voting.voting_happens_now"}}</h3>
  </div>
  <h2 class="text-lg">You are... {{@votingCompletionPercentage}}% {{t "shrimpo.voting_completion"}}!</h2>
  {{#if this.voted}}
    <p>
      {{t "shrimpo.already_voted"}}
    </p>
    <img
      class="bounce"
      src="/assets/images/i_voted.png"
    >
  {{/if}}
  {{#each-in this.votes key="score" as |name vote|}}
    <div class="shrimpo-score-picker mb-2">
      <h3 class='text-lg'>{{name}}</h3>
      <input
        type="range"
        min=1
        max=6
        value={{vote.score}}
        {{on "change" (fn this.setScore name)}}
      >
      <div class="flex">
        <img
          width='48'
          src="{{emoji-path vote.emoji}}"
        >
        <img
          class={{if (gte vote.score 2) "opacity-100" "opacity-50"}}
          width='48'
          src="{{emoji-path vote.emoji}}"
        >
        <img
          class={{if (gte vote.score 3) "opacity-100" "opacity-50"}}
          width='48'
          src="{{emoji-path vote.emoji}}"
        >
        <img
          class={{if (gte vote.score 4) "opacity-100" "opacity-50"}}
          width='48'
          src="{{emoji-path vote.emoji}}"
        >
        <img
          class={{if (gte vote.score 5) "opacity-100" "opacity-50"}}
          width='48'
          src="{{emoji-path vote.emoji}}"
        >
        <img
          class={{if (gte vote.score 6) "opacity-100" "opacity-50"}}
          width='48'
          src="{{emoji-path vote.emoji}}"
        >
      </div>
    </div>
  {{/each-in}}
  <button
    {{on "click" this.saveVote}}
    class="cool-button">
    SAVE VOTE
  </button>
  {{#if this.voted}}
    <img
      class="bounce"
      src="/assets/images/i_voted.png"
    >
  {{/if}}
{{else}}
  <div>
    <p>{{t "shrimpo_voting.login_to_vote"}}</p>
  </div>
{{/if}}