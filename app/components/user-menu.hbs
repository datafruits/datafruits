{{#if @showing}}
  <ul role="menu" class="absolute right-0 classic:bg-df-pink blm:bg-black trans:bg-df-blue font-semibold z-10" style="top: 115px;">
    <li class="hover:bg-df-blue rounded px-2 py-1">
      <span
          {{on "click" @toggleUserMenu}}
        >
        <LinkTo
          @route="home.dj"
          @model={{this.currentUser.user.username}}
          >
          {{this.currentUser.user.username}}
        </LinkTo>
      </span>
    </li>
    <li class="hover:bg-df-blue rounded px-2 py-1">
      <span
          {{on "click" @toggleUserMenu}}
        >
        <LinkTo
          @route="home.user.settings"
          >
          {{t "usermenu.settings"}}
        </LinkTo>
      </span>
    </li>
    <li class="hover:bg-df-blue rounded px-2 py-1">
      <span
          {{on "click" @toggleUserMenu}}
        >
        <LinkTo
          @route="home.user.favorites"
          >
          {{t "profile.favorites"}}
        </LinkTo>
      </span>
    </li>
    <li class="hover:bg-df-blue rounded px-2 py-1">
      <LinkTo @route="home.user.my-shows" @invokeAction={{@toggleUserMenu}}>{{t "profile.my-shows.title"}}</LinkTo>
    </li>
    <li class="h-1 bg-df-green"></li>
    <li class="hover:bg-df-blue rounded px-2 py-1">
      <a href="#" {{on "click" this.logout}}>{{t "usermenu.logout"}}</a>
    </li>
  </ul>
{{/if}}
