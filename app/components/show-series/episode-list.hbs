<Await @promise={{this.fetchEpisodes}}>
  <:pending>
    Loading episodes...
  </:pending>

  <:success as |episodes|>
    {{#each episodes as |episode|}}
      <ShowEpisodeCard @episode={{episode}} />
    {{/each}}
    <FruitsUi::Pagination
              @totalPages={{episodes.meta.total_pages}}
              @page={{@page}}
              @route="home.show" />
  </:success>

  <:error>
    Something went wrong :(
  </:error>
</Await>