<label id="locale-selector-label"
  for="locale-selector"
>
  {{t "locale"}}
</label>
<select
    id="locale-selector"
    name="locale-selector"
    class="classic:bg-df-pink blm:bg-black trans:bg-df-blue border-solid border-2 border-df-blue"
    aria-label="{{ t "locale"}}"
    {{on "change" @setLocale}}>
  {{#each this.locales as |localeChoice|}}
    <option
      value={{localeChoice.value}}
      selected={{eq selectedLocale localeChoice.value}}
    >
      {{localeChoice.text}}
    </option>
  {{/each}}
</select>
