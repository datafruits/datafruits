<nav
  class="classic:bg-df-pink blm:bg-black trans:bg-df-blue mb-2 hidden md:block overflow-hidden w-full text-3xl relative"
  role="navigation">
  <ul class="flex flex-wrap mt-2 ml-2">
    <li class="py-2 pr-3 text-white text-shadow-light w-full md:w-auto border-dashed border-white border-4 md:border-none">
      <a
        {{on "mouseenter" @toggleSubMenu}}
        aria-label={{t "radio.aria"}}
        class="text-white text-shadow-light hover:text-white"
        href="#"
      >
        {{t "radio.title"}}
        <FaIcon
          class="transition-all duration-100 ease-in-out {{if @submenuOpen "rotated"}}"
          aria-hidden="true"
          @icon="chevron-right" />
      </a>
    </li>
    <li class="py-2 pr-3 text-white text-shadow-light w-full md:w-auto border-dashed border-white border-4 md:border-none">
      <LinkTo
        class="text-white text-shadow-light hover:text-gray-400"
        aria-label={{t "chat.aria"}}
        @route="home.chat">
        {{t "chat.title"}}
      </LinkTo>
    </li>
    <li class="py-2 pr-3 text-white text-shadow-light w-full md:w-auto border-dashed border-white border-4 md:border-none">
      <a
        class="text-white text-shadow-light hover:text-gray-400"
        aria-label={{t "releases.aria"}}
        href="http://releases.datafruits.fm/" target="_blank" rel="noopener noreferrer">
        {{t "label"}}
      </a>
    </li>
    <li class="py-2 pr-3 text-white text-shadow-light w-full md:w-auto border-dashed border-white border-4 md:border-none">
      <a
        class="text-white text-shadow-light hover:text-gray-400"
        aria-label={{t "shop.aria"}}
        href="https://datafruits.bandcamp.com/merch" target="_blank" rel="noopener noreferrer">
        {{t "shop.title"}}
      </a>
    </li>
    <li class="py-2 pr-3 text-white text-shadow-light w-full md:w-auto border-dashed border-white border-4 md:border-none">
      <LinkTo
        class="text-white text-shadow-light hover:text-gray-400"
        aria-label={{t "about.aria"}}
        @route="home.about">
        {{t "about.title"}}
      </LinkTo>
    </li>
    <li class="py-2 pr-3 text-white text-shadow-light w-full md:w-auto border-dashed border-white border-4 md:border-none">
      <a
        class="text-white text-shadow-light hover:text-gray-400"
        target="_blank"
        rel="noopener noreferrer"
        href="https://hubs.mozilla.com/MsvfAkH/terrific-satisfied-area">
        <img
          width=75
          alt="{{t "3D.title"}}"
          src="/assets/images/3D.gif">
      </a>
    </li>
  </ul>
  {{#if @submenuOpen}}
    <ul class="flex flex-wrap items-center ml-2">
      <li>
        <LinkTo
          class="text-2xl ml-3 text-white text-shadow-light hover:text-gray-400 w-full md:w-auto border-dashed border-white border-4 md:border-none"
          aria-label={{t "djs.aria"}}
          @route="home.djs">
          {{t "djs.title"}}
        </LinkTo>
      </li>
      <li>
        <LinkTo
          class="text-2xl ml-3 text-white text-shadow-light hover:text-gray-400 w-full md:w-auto border-dashed border-white border-4 md:border-none"
          aria-label={{t "podcasts.aria"}}
          @route="home.podcasts">
          {{t "podcasts.title"}}
        </LinkTo>
      </li>
      <li>
        <LinkTo
          class="text-2xl ml-3 text-white text-shadow-light hover:text-gray-400 w-full md:w-auto border-dashed border-white border-4 md:border-none"
          aria-label={{t "timetable.aria"}}
          @route="home.timetable">
          {{t "timetable.title"}}
        </LinkTo>
      </li>
      <li>
        <LinkTo
          class="text-2xl ml-3 text-white text-shadow-light hover:text-gray-400 w-full md:w-auto border-dashed border-white border-4 md:border-none"
          aria-label={{t "djinquiry.aria"}}
          @route="home.dj-inquiry">
          {{t "djinquiry.title"}}
        </LinkTo>
      </li>
      <li>
        <LinkTo
          class="text-2xl ml-3 text-white text-shadow-light hover:text-gray-400 w-full md:w-auto border-dashed border-white border-4 md:border-none"
          aria-label={{t "wiki.aria"}}
          @route="home.wiki">
          {{t "wiki.title"}}
        </LinkTo>
      </li>
    </ul>
  {{/if}}
</nav>
{{#if this.session.isAuthenticated}}
  <ul class="hidden md:block px-4 py-4 font-semibold text-3xl">
    <li
      class="flex items-center space-x-2 justify-center mx-6">
      <img
        class="inline rounded-lg"
        style="height: 2rem;"
        src="{{this.currentUser.user.avatarUrl}}"
        align="center"
        alt={{this.currentUser.user.username}} />
      <a href="#"
        class=""
        role="button"
        aria-label="{{t "usermenu.dropdown-aria"}}"
        {{on "click" this.args.toggleUserMenu}}>
        {{this.currentUser.user.username}}
      </a>
    </li>
    <li class="flex space-x-2">
      <span>Lv. 0</span>
      <div>
        <span class="text-xs">Æ‘</span><span>{{this.currentUser.user.fruitTicketBalance}}</span>
      </div>
    </li>
  </ul>
{{else}}
  <nav class="hidden md:flex flex-row items-start mt-4 mr-8">
    <LinkTo @route="home.sign-up" class="cool-button mr-2">
      {{t "chat.sign_up"}}
    </LinkTo>
    <button {{on "click" @toggleLoginModal}}
         type="button"
         class="cool-button"
         title={{t "chat.titles.login"}}
         data-test-login-button
         >
         {{t "chat.login"}}
    </button>
  </nav>
  <LinkTo
    aria-label={{t "home.aria"}}
    class="hidden md:block"
    @route="home.index">
    <h1 class="logo font-debussy text-5xl text-white">
      {{t "site_title_fm"}}
    </h1>
  </LinkTo>
{{/if}}
