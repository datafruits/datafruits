<div
  class="grid grid-cols-2"
  title={{t "chat.titles.buddy_list_button"}}
>
  <label 
    id="buddy-list-input-label"
    for="buddy-list-input"
  >
    Show Users
  </label>
  <input 
    type="checkbox" 
    name="buddy-list-input" 
    id="buddy-list-input"
    {{on "change" this.toggleDialog}}
    checked={{this.showingDialog}}
  />
</div>
{{#if this.showingDialog}}
  <Ui::Modal
    @toggleModal={{this.toggleDialog}}
    @hasOverlay={{false}}
    @clickOutsideToClose={{true}}
  >
    <div class="modal-body m-1">
      <div class="flex flex-shrink overflow-y-scroll">
        <ul id="userlist">
          {{#each-in this.chat.presences as |username user|}}
            <UserListItem @user={{user}} />
          {{/each-in}}
        </ul>
      </div>
    </div>
  </Ui::Modal>
{{/if}}
