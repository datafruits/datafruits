<span
  {{on "mouseenter" this.showUserInfo}}
  {{on "mouseleave" this.hideUserInfo}}
  class="relative"
  >
  {{#if this.canShowUserInfo}}
    <LinkTo class="hover:underline" @route="home.dj" @model={{@username}}>
      {{format-message-user @username}}
    </LinkTo>
  {{else}}
    {{format-message-user @username}}
  {{/if}}
  {{#if (and this.showingDjInfo this.canShowUserInfo)}}
    <div class="absolute top-0 left-0 classic:bg-df-blue blm:bg-black trans:theme-trans p-5 rounded-xl z-50 border-4 border-white">
      <img
        class="inline rounded-lg"
        style="height: 2rem;"
        src="{{@avatarUrl}}"
        align="center"
        alt={{this.currentUser.user.username}} / >
      <User::Badges @role={{@role}} />
      {{#if this.canShowUserInfo}}
        <LinkTo class="hover:underline" @route="home.dj" @model={{@username}}>
          {{@username}}
        </LinkTo>
      {{else}}
        {{@username}}
      {{/if}}
      <br />
      <span><i>{{t "profile.pronouns"}}:</i> {{@pronouns}}</span>
      <br />
      <span><i>{{t "profile.style"}}:</i> {{@style}}</span>
    </div>
  {{/if}}
</span>
