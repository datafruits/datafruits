<div class="admin-page">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-white mb-8">Admin Dashboard</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Fruits Count Chart -->
      <div class="bg-gray-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-white mb-4">Fruits Count</h2>
        <div class="chart-placeholder">
          <p class="text-gray-400 mb-4">Chart data:</p>
          <ul class="text-white">
            {{#each @model.fruitsCount.labels as |label index|}}
              <li>{{label}}: {{get @model.fruitsCount.data index}}</li>
            {{/each}}
          </ul>
          <p class="text-gray-400 mt-4 text-sm">Chart will be rendered here with Chart.js</p>
        </div>
      </div>

      <!-- User Signups Chart -->
      <div class="bg-gray-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-white mb-4">User Signups per Month</h2>
        <div class="chart-placeholder">
          <p class="text-gray-400 mb-4">Chart data:</p>
          <ul class="text-white">
            {{#each @model.userSignups.labels as |label index|}}
              <li>{{label}}: {{get @model.userSignups.data index}}</li>
            {{/each}}
          </ul>
          <p class="text-gray-400 mt-4 text-sm">Chart will be rendered here with Chart.js</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .chart-placeholder {
    min-height: 200px;
    padding: 20px;
    border: 2px dashed #444;
    border-radius: 8px;
  }
  .admin-page {
    background-color: #1a1a1a;
    min-height: 100vh;
  }
</style>