<section class="page-spacing">
  <h1>
    <p>
      {{t "shrimpo.tagline_1"}}
    </p>
    <span class='ml-2 text-lg italic'>{{t "shrimpo.beta"}}</span>
    <p>
      {{t "shrimpo.tagline_2"}}
    </p>
  </h1>
  <p class="italic">
    {{t "shrimpo.why"}}
  </p>

  {{#if this.canCreateNewShrimpo}}
    <div class="my-2">
      <LinkTo @route="home.shrimpos.new" class="cool-button">
        {{t "shrimpo.begin"}}
      </LinkTo>
    </div>
  {{/if}}

  <h3>Shrimpos in Progress</h3>
  {{#each this.currentShrimpos as |shrimpo|}}
    <Shrimpo::Card @shrimpo={{shrimpo}} />
  {{else}}
    <p>
      {{t "shrimpo.no_shrimpos_in_progress"}}
    </p>
  {{/each}}

  <h3>Completed Shrimpos</h3>
  {{#each this.completedShrimpos as |shrimpo|}}
    <Shrimpo::Card @shrimpo={{shrimpo}} />
  {{/each}}
</section>