<section>
  <h1 class="mb6 text-center text-xl">{{t "password_reset.heading"}}</h1>

  <form {{action "submit" on="submit"}}>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="login">
        {{t "password_reset.email"}}
      </label>
      <Input id="login"
        placeholder="email"
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        @type="text"
        @value={{this.email}}
        @autofocus={{true}}
        @autocapitalize="off" />
    </div>

    <div class="flex items-center justify-between">
      <Input
        @type="submit"
        class="cool-button cursor-pointer"
        disabled={{this.cantSubmit}}
        data-test-submit-button
        @value={{t "password_reset.submit"}} />
    </div>
  </form>
</section>
