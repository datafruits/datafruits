<div class="md:grid md:grid-cols-3 md:gap-4 page-spacing">
  <div id="left">
    <h2 class="text-2xl text-shadow my-2 mt-5 pt-2 px-5">
      {{t "home.upcoming_shows"}}
    </h2>
    <div class="flex flex-wrap flex-shrink-0">
      {{#each this.model.upcomingShows as |show|}}
        <ShowEpisodeCard @episode={{show}} />
      {{/each}}
    </div>
    <h2 class="text-2xl text-shadow my-2 mt-5 pt-2 px-5">
      {{t "home.latest_wiki"}}
    </h2>
    {{#each this.model.latestWiki as |wikiPage|}}
      <LinkTo
        class="bg-df-pink text-2xl rounded-lg border-4 border-white p-2 mb-2 block hover:bg-white flex justify-between"
        @route="home.wiki.show"
        @model={{wikiPage.slug}}>
        {{wikiPage.title}}
      </LinkTo>
    {{/each}}
  </div>
  <div id="center">
    <h2 class="text-2xl text-shadow my-2 mt-5 pt-2 px-5">
      {{t "home.latest_podcasts"}}
    </h2>
    <div class="flex flex-wrap flex-shrink-0">
      {{#each this.model.latestPodcasts as |track|}}
        <ShowEpisodeCard @episode={{track}} />
      {{/each}}
    </div>
    <h2 class="text-2xl text-shadow my-2 mt-5 pt-2 px-5">
      {{t "home.latest_posts"}}
    </h2>
    {{#each this.model.latestPosts as |post|}}
      <Forum::ThreadCard @thread={{post}} />
    {{/each}}
  </div>
  <div id="right">
    <NetworkStatus as |status|>
      <ChatPreview
        @networkStatus={{status}}
      />
    </NetworkStatus>
    <div class="border-4 border-white rounded-lg">
      <a href="https://datafruits.bandcamp.com/merch" target="_blank">
        <img src="/assets/images/fruits_merch.png" />
      </a>
    </div>
    <div>
      <h2 class="text-2xl text-shadow my-2 mt-5 pt-2 px-5">
        LATEST VID
      </h2>
      <iframe width="560" height="315" src="https://www.youtube.com/embed/{{this.latestYoutubeVideoId}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
    <h2 class="text-2xl text-shadow my-2 mt-5 pt-2 px-5">
      {{t "home.latest_shrimpo"}}
    </h2>
    {{#each this.model.activeShrimpos as |shrimpo|}}
      <Shrimpo::Card @shrimpo={{shrimpo}} />
    {{/each}}
  </div>
</div>