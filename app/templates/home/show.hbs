{{page-title this.model.title}}
<div class="relative overflow-hidden show-poster w-full flex">
  <div class="w-1/2">
    <div style="background-image: url({{this.model.imageUrl}})" alt={{this.model.title}} class="w-full h-full show-image bg-top bg-cover"></div>
    <div class="show-info">
      <h1 class="font-cursive text-3xl">
        {{this.model.title}}
      </h1>
      <h2>
        {{t "show.hosted_prefix"}}
        <span class="font-cursive text-xl">
          <LinkTo @route="home.dj" @model={{this.model.hostedBy}}>
            {{this.model.hostedBy}}
          </LinkTo>
        </span>
      </h2>
      <h3 class="modal-title" id="myModalLabel">
        {{format-date model.start}}
      </h3>
      <p>
        {{marked-down model.description}}
      </p>
    </div>
  </div>
  <div class="w-1/2">
    <h1 class="text-2xl">
      {{t "show.episodes"}}
    </h1>
    {{#each this.model.episodes as |episode|}}
      <ShowEpisodeCard @episode={{episode}} />
    {{/each}}
  </div>
</div>