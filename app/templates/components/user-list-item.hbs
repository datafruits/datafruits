<li class="userlist-item">
  <span
      class="flex items-center space-x-2 justify-end mr-4">
    {{#if this.avatarUrl}}
      <img
        class="inline rounded-md"
        style="height: 20px;"
        src="{{this.avatarUrl}}"
        align="center"
        alt="{{ t "chat.user_avatar" }}" />
    {{/if}}
    <span>
      <Chat::Username
        @role={{this.role}}
        @username={{this.username}}
        @avatarUrl={{this.avatarUrl}}
        />
    </span>
  </span>
</li>
